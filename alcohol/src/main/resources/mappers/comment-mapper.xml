<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mid.alcohol.repository.CommentRepository">
    
    <!-- PK ID로 댓글 읽어오기 -->
    <select id = "selectById"
        resultType="com.mid.alcohol.domain.Comment">
        select * from COMMENTS where COMMENTID = #{comment_id}
        </select>
    
    <!-- BODARD ID로 댓글 읽어오기 -->
    <select id="selectByBoardId"
        resultType="com.mid.alcohol.domain.Comment">
        select * from COMMENTS
        where BOARD_ID = #{board_id}
        order by TIME desc
    </select>
    

    <!-- 댓글 수정 -->
    <update id="update">
        update COMMENTS
        set CONTENT = #{content}, TIME = systimestamp
        where COMMENTID = #{comment_id}
    </update>

    <!-- 댓글 삭제 -->  
    <delete id="delete">
        delete from COMMENTS
        where COMMENTID = #{comment_id}
    </delete>

    <!-- 댓글 생성 -->
    <insert id="insert">
        insert into COMMENTS (board_id, nickname, content, time) 
            values (#{board_id}, #{nickname}, #{content}, systimestamp) <!-- 모델 이름과 완벽히 일치 --> 
    </insert>    
    
    <!-- 달린 댓글 갯수 세기 -->
    <select id="selectCommentCountWithDealId"
        resultType="java.lang.Long">
        select count(*) from COMMENTS
        where BOARD_ID = #{board_id}
        </select>


</mapper>